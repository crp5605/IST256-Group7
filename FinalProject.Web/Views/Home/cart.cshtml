@{
    ViewData["Title"] = "Home Page";
}
<head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

    <div class="container mt-4">
        <h2>Checkout</h2>
        <hr>

        <div class="mb-4">
            <h4>Order Summary</h4>
            <p>Total Amount: $<span id="totalAmount"></span></p>
        </div>

    <script>
        // Retrieve the cart total from session storage
        var cartTotal = parseFloat(sessionStorage.getItem('cartTotal')) || 0;

        // Display the cart total on the checkout page
        document.getElementById('totalAmount').textContent = cartTotal.toFixed(2);
    </script>


        <form>
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email address</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="Ex: cjg5966@psu.edu" required>
            </div>

            <div class="mb-3">
                <label for="inputName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="inputName" placeholder="Ex: Joe Average" required>
            </div>

            <div class="mb-3">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="Ex: 228 E College Ave" required>
            </div>

            <div class="mb-3">
                <label for="inputCard" class="form-label">Credit Card Information</label>
                <input type="text" class="form-control" id="inputCard" placeholder="Ex: 1234 5678 9012 3456" required>
            </div>

            <div class="mb-3">
                <label for="inputTerms" class="form-check-label">
                    <input type="checkbox" class="form-check-input" id="inputTerms" required>
                    I agree to the terms and privacy policy
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Place Order</button>
        </form>
    </div>
    
</body>

